<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_darkblue"
    tools:context=".QrScannerActivity">

    <!-- Root Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo at the Top-Left -->
        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="75dp"
            android:layout_height="54dp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo" />

        <!-- Image Above CardView5 -->
        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="300dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/qr_illustration" />

        <!-- First CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="247dp"
            android:layout_height="231dp"
            app:cardElevation="8dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Information"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Empty space to push the second CardView to the bottom -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Second CardView at the Bottom -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="300dp"
            android:layout_height="116dp"
            app:cardElevation="8dp"
            android:layout_margin="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Background ImageView -->

                <!-- First ImageView and TextView for Scan QR -->

                <!-- Second ImageView for Gallery -->

                <!-- Gallery TextView placed below imageView10 -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Card background image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/green_blue_gradient" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="93dp"
                    android:layout_height="67dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/qrcode" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="90dp"
                    android:text="Scan QR"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="67dp"
                    android:layout_height="52dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="175dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/img_icon" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="58dp"
                    android:layout_height="29dp"
                    android:layout_below="@id/imageView10"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="59dp"
                    android:layout_toEndOf="@+id/textView9"
                    android:gravity="center"
                    android:text="Gallery"
                    android:textStyle="bold" />

            </RelativeLayout>






        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
